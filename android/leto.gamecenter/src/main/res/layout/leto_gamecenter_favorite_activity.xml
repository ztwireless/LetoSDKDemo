<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mgc_sdk_white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mgc_sdk_action_bar_height"
        android:background="@color/mgc_sdk_white">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/leto_minigame_back_pressed" />

    <com.leto.game.base.view.tablayout.CommonTabLayout
        android:id="@+id/indicator"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:background="@color/mgc_sdk_white"
        app:tl_iconVisible="false"
        app:tl_indicator_color="@color/mgc_sdk_bluef8"
        app:tl_indicator_corner_radius="1dp"
        app:tl_indicator_height="2dp"
        app:tl_tab_padding="10dp"
        app:tl_tab_space_equal="true"
        app:tl_textBold="SELECT"
        app:tl_textSelectColor="@color/mgc_sdk_text_blacks"
        app:tl_textUnselectColor="@color/mgc_sdk_black2"
        app:tl_textsize="15sp"/>

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/leto_minigame_clear_cache"
            android:textSize="11sp"
            android:textColor="#666666"
            android:drawableStart="@drawable/leto_minigame_clear_cache"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mgc_sdk_white" />
</LinearLayout>